SELECT
    e.id,
    e.first_name,
    e.last_name
FROM
    Employee e
LEFT JOIN
    Leave l ON e.id = l.employee_id
GROUP BY
    e.id, e.first_name, e.last_name
HAVING
    COUNT(l.id) = 0;
